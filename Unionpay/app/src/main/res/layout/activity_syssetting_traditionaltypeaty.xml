                <TextView
                    style="@style/syssetting_txt"
                    android:text="@string/settleAdjust" />

                <ToggleButton
                    android:id="@+id/togbtn_jiesuantiaozheng"
                    style="@style/syssetting_togglebtn"
                    android:layout_alignParentRight="true"
                    android:textOff=""

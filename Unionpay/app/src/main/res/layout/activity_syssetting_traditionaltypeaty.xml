            <RelativeLayout style="@style/sysseeting_layout_gray">

                <TextView
                    style="@style/syssetting_txt"
                    android:text="@string/yushouquanwanchengtongzhi" />

                <ToggleButton
                    style="@style/syssetting_togglebtn"
                    android:id="@+id/togbtn_yushouquanwanchengtongzhi"
                    android:layout_alignParentRight="true"
                    android:textOff=""
